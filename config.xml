<?xml version='1.0' encoding='utf-8'?>
<widget id="com.oneSales" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>OneSales</name>
    <description>Software de fuerza de Venta
    </description>
    <author email="systems@softwareida.com" href="http://idasoftware.com">
     IDA SOFTWARE SOLUTIONS
    </author>
    <content src="index.html" />

    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-sqlite-ext" spec="1"/>
    <plugin name="cordova-plugin-device" spec="1"/>
    <plugin name="cordova-plugin-geolocation" spec="1"/>

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~5.1.1" />
    <engine name="ios" spec="~4.1.0" />
</widget>
